<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.app.spott.fragments.PostComposeFragment"
    android:orientation="vertical">

    <include layout="@layout/layout_common_profile_pic_post_photo"/>

    <EditText
        android:id="@+id/etPostMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:maxLines="5"
        android:layout_below="@+id/ivPhoto"
        android:layout_margin="16dp"
        android:background="@android:color/transparent"
        android:textCursorDrawable="@drawable/drawable_et_cursor"
        android:hint="Inspire..."/>

    <Button
        android:id="@+id/btnPost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:layout_gravity="right"
        android:layout_below="@+id/etPostMessage"
        android:layout_alignParentRight="true"
        android:text="Post"
        android:textColor="@android:color/white"
        android:background="@color/colorPrimary"/>

</RelativeLayout>
