<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/ivActivityIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/ic_arm_wrestling"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/ivActivityIcon"
        android:layout_toRightOf="@+id/ivActivityIcon"
        android:orientation="vertical"
        android:weightSum="3">

        <TextView
            android:id="@+id/tvActivityLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Some Gym in SF"
            android:layout_weight="2" />

        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvActivityFrequency"
                android:text="Frequency"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tvActivityTime"
                android:text="Time-o-day"
                android:layout_toRightOf="@+id/tvActivityFrequency"
                android:layout_toEndOf="@+id/tvActivityFrequency"
                android:paddingLeft="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>