<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:windowBackground">@android:color/white</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"></style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="WorkoutEditCardView" parent="CardView">
        <item name="cardCornerRadius">4dp</item>
        <item name="cardPreventCornerOverlap">false</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <!--<item name="android:stateListAnimator">@anim/lift_on_touch</item>-->
        <item name="android:clickable">true</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginLeft">32dp</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_alignParentEnd">true</item>

    </style>

    <style name="WorkoutEditIcons">
        <item name="android:scaleType">fitXY</item>
        <item name="android:elevation">4dp</item>
        <item name="android:padding">12dp</item>
        <item name="android:background">@drawable/gradient_stroke_circle</item>
    </style>

    <style name="WorkoutEditFormButtons">
        <item name="android:clickable">true</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">#424242</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="WorkoutEditExpandables">
        <!--<item name="android:layout_marginTop">4dp</item>-->
        <item name="android:background">@android:color/transparent</item>
        <item name="android:layout_marginLeft">32dp</item>
    </style>

    <style name="WorkoutEditChildren">
        <item name="android:layout_marginTop">12dp</item>
    </style>

    <style name="ChatUserImage">
        <item name="android:layout_centerVertical">true</item>
        <item name="android:elevation">4dp</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:src">@drawable/ic_launcher</item>
        <item name="app:riv_border_radius">30dp</item>
        <item name="app:riv_border_width">2dp</item>
    </style>

    <style name="ChatUserImage.Other">
        <item name="android:contentDescription">@string/profile_other</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="app:riv_border_color">@color/chatOther</item>
    </style>

    <style name="TransparentToolbarTheme" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="actionMenuTextColor">@android:color/white</item>
    </style>

</resources>
